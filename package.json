{
	"name": "database",
	"description": "Cloudflare's native serverless SQL database.",
	"cloudflare": {
		"label": "Worker + D1 Database",
		"products": [
			"Workers",
			"D1"
		],
		"categories": [
			"storage"
		],
		"docs_url": "https://developers.cloudflare.com/d1/",
		"preview_icon_url": "https://raw.githubusercontent.com/soeparnocorp/database/refs/heads/main/src/assets/favicon.ico",
		"preview_image_url": "https://raw.githubusercontent.com/soeparnocorp/database/refs/heads/main/src/assets/favicon.ico",
		"publish": true
	},
	"devDependencies": {
		"typescript": "5.9.3",
		"wrangler": "4.56.0"
	},
	"private": true,
	"scripts": {
		"cf-typegen": "wrangler types",
		"check": "tsc && wrangler deploy --dry-run",
		"deploy": "wrangler deploy",
		"dev": "pnpm seedLocalD1 && wrangler dev",
		"predeploy": "wrangler d1 migrations apply DB --remote",
		"seedLocalD1": "wrangler d1 migrations apply DB --local"
	}
}
